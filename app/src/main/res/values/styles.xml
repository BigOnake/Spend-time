<resources>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="android:windowBackground">@color/dark_backgroundColor</item>
        <item name="spinner_color">@color/dark_spinner_color</item>
        <item name="card_color">@color/dark_cardColor</item>
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="BNB_color">@color/dark_bottom_navigation_bar</item>
        <item name="BNB_icon_color">@color/dark_bottom_navigation_bar_icon</item>
        <item name="BNB_text_color">@color/dark_bottom_navigation_bar_text</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
    </style>

    <style name="ToolBarStyle">
        <item name="titleTextColor">@color/dark_text_color</item>
    </style>

    <style name="presentational_text">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="action_text_main">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="above_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    //Requirements
    <style name="underline_text">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    //Header
    <style name="header_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    //seekBar
    <style name="seek_bar">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="bar_color">@color/dark_cardColor</item>
        <item name="bar_highlight_color">@color/ColorSecond</item>
        <item name="corner_radius">5</item>
        <item name="data_type">_float</item>
        <item name="left_thumb_color">@color/ColorMain</item>
        <item name="left_thumb_color_pressed">@color/ColorMain</item>
        <item name="right_thumb_color">@color/ColorMain</item>
        <item name="right_thumb_color_pressed">@color/ColorMain</item>
    </style>

</resources>
